{
  "manifest_version": 3,
  "name": "Wyser Vault Autofill",
  "description": "Detects login forms, autofills credentials, and saves new passwords.",
  "version": "1.0",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Wyser Vault"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["crypto-js.js", "icon16.png", "icon32.png", "icon48.png", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}